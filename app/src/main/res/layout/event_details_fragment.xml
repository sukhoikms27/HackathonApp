<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.schedule.EventDetailsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout">

        <ImageView
                android:id="@+id/author_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/stallman"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/event_title"
                android:text="Free software and your freedom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/author_photo"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        <TextView
                android:id="@+id/event_speaker"
                android:text="Richard Stallman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/author_photo"
                app:layout_constraintStart_toStartOf="@+id/event_title"
                android:layout_marginStart="8dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/event_time"
                android:text="22 июня 2019, 10:15 - 11:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/event_speaker"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/event_speaker"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/event_room"
                android:text="Зал Сова"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/event_time"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/event_time"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/event_description"
                android:text="The Free Software Movement campaigns for computer users' freedom to cooperate and control their own computing. The Free Software Movement developed the GNU operating system, typically used together with the kernel Linux, specifically to make these freedoms possible. The Free Software Movement campaigns for computer users' freedom to cooperate and control their own computing. The Free Software Movement developed the GNU operating system, typically used together with the kernel Linux, specifically to make these freedoms possible."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/event_room"
                app:layout_constraintStart_toStartOf="@+id/event_room"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        <ImageView
                android:id="@+id/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_event_detail_tag"
                app:layout_constraintTop_toBottomOf="@+id/event_description"
                app:layout_constraintStart_toStartOf="@+id/event_description"
                android:layout_marginTop="16dp"/>

        <TextView
                android:id="@+id/event_tags"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:text="ML, Opensource"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/tags"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/tags" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

