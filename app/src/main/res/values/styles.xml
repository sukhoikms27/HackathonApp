<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name ="android:windowBackground"> @drawable/splash_screen_background</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Text.Event">
    </style>

    <style name="Text.Event.Primary">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Event.Secondary">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/gray_dove_light</item>
    </style>

    <style name="TextView">
    </style>

    <style name="TextView.Event">
        <item name="android:textAppearance">@style/Text</item>
        <!--<item name="android:padding">@dimen/small_margin_size</item>-->
    </style>

    <style name="TextView.Event.Primary">
        <item name="android:textAppearance">@style/Text.Event.Primary</item>
    </style>

    <style name="TextView.Event.Secondary">
        <item name="android:textAppearance">@style/Text.Event.Secondary</item>
    </style>

    <style name="TextView.Chips">
        <item name="android:textAppearance">@style/Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>


</resources>
